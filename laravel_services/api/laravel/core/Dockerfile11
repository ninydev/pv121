# Устанавливаем базовый образ PHP
FROM php:8.2-fpm

# Установка необходимых пакетов для работы с zip
RUN apt-get update && apt-get install -y zlib1g-dev libzip-dev unzip

# Устанавливаем необходимые расширения PHP
RUN docker-php-ext-install pdo pdo_mysql zip

# Устанавливаем Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Устанавливаем Nginx
RUN apt-get update && apt-get install -y nginx

# Установка расширения Redis
RUN pecl install redis && docker-php-ext-enable redis

# Установка расширения AMQP
RUN apt-get update && apt-get install -y librabbitmq-dev && \
    pecl install amqp && docker-php-ext-enable amqp

# Копируем файлы проекта в контейнер
COPY . /var/www/html

# Устанавливаем зависимости проекта
RUN composer install --no-dev --no-scripts --no-progress --prefer-dist

# Настраиваем права доступа
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# Открываем порт для доступа к приложению
EXPOSE 80

# Запускаем PHP-FPM и Nginx
CMD service php8.2-fpm start && nginx -g "daemon off;"
